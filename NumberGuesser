package Practice;
import java.util.Scanner;

public class NumberGuesser {
  public static void main(String[] args){
    Scanner guess = new Scanner(System.in);

    int secretNumber = (int)(Math.random() * 20) + 1;
    System.out.println("Guess a number between 1 to 20: ");
    int num = 0;

    while (num != secretNumber){
      num = guess.nextInt();
      System.out.println(num + " is not the right number try again: ");
    }

    System.out.println("You guessed! It was " + num);
    guess.close();

  }
}
